<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="org.args.GUI.LoginScreenController">
    <top>
        <Label text="Welcome to the HSTS system!" textAlignment="CENTER" BorderPane.alignment="CENTER">
            <font>
                <Font name="Bell MT" size="40.0"/>
            </font>
        </Label>
    </top>
    <bottom>
        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#loginAttempt" text="Login"
                BorderPane.alignment="CENTER">
            <font>
                <Font name="Bell MT" size="24.0"/>
            </font>
        </Button>
    </bottom>
    <center>
        <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0"
                   BorderPane.alignment="CENTER">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                    <children>
                        <Label alignment="BOTTOM_LEFT" focusTraversable="false" layoutX="72.0" layoutY="52.0"
                               text="Username:" textOverrun="CENTER_ELLIPSIS" AnchorPane.topAnchor="66.0">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="usernameField" layoutX="225.0" layoutY="71.0"/>
                    </children>
                </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                    <children>
                        <Label layoutX="72.0" layoutY="52.0" prefHeight="35.0" prefWidth="126.0" text="Password:"
                               AnchorPane.topAnchor="66.0">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <PasswordField fx:id="passwordField" layoutX="225.0" layoutY="71.0"/>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </center>
</BorderPane>
