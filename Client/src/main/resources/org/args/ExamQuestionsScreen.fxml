<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.args.GUI.ExamQuestionsController">
    <StackPane>
        <HBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="10.0" stylesheets="@bootstrap3.css">
            <VBox alignment="CENTER">
                <HBox.margin>
                    <Insets top="-80.0" />
                </HBox.margin>
                <Label fx:id="questionsListTitle" alignment="CENTER" prefHeight="77.0" prefWidth="270.0" text="Questions in Course X" textAlignment="CENTER">
                    <font>
                        <Font name="SansSerif Regular" size="18.0" />
                    </font>
                </Label>
                <ListView fx:id="courseQuestionsListView" onMouseClicked="#handleMouseEventCourseQuestionsList" prefHeight="380.0" prefWidth="270.0">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </ListView>
            </VBox>
            <VBox alignment="CENTER" prefHeight="600.0" prefWidth="175.0" spacing="30.0">
                <Button fx:id="detailsButton" mnemonicParsing="false" onAction="#showQuestionDetails" prefHeight="32.0" prefWidth="83.0" styleClass="info" text="Details" />
                <Button fx:id="addButton" mnemonicParsing="false" onAction="#addToExamQuestionList" prefHeight="32.0" prefWidth="78.0" styleClass="info" text="Add" />
                <Button fx:id="removeButton" mnemonicParsing="false" onAction="#removeFromExamQuestionList" prefHeight="32.0" prefWidth="78.0" styleClass="info" text="Remove" />
            </VBox>
            <VBox alignment="CENTER" fillWidth="false" spacing="15.0">
                <Label prefHeight="53.0" prefWidth="141.0" text="Questions added">
                    <font>
                        <Font name="SansSerif Regular" size="18.0" />
                    </font>
                </Label>
                <ListView fx:id="examQuestionsListView" onMouseClicked="#handleMouseEventExamQuestionsList" prefHeight="380.0" prefWidth="270.0">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </ListView>
                <ButtonBar prefHeight="40.0" prefWidth="200.0">
                    <buttons>
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancel" prefHeight="32.0" prefWidth="90.0" styleClass="danger" text="Back" />
                        <Button fx:id="doneButton" mnemonicParsing="false" onAction="#allQuestionsAdded" prefHeight="32.0" prefWidth="90.0" styleClass="primary" text="Next" />
                    </buttons>
                </ButtonBar>
            </VBox>
        </HBox>
    </StackPane>
</ScrollPane>
