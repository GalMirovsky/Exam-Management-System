<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.args.GUI.QuestionManagementController">
   <content>
      <VBox alignment="TOP_CENTER" prefHeight="915.0" prefWidth="1258.0" stylesheets="@bootstrap3.css">
         <children>
            <VBox>
               <children>
                  <HBox alignment="CENTER" prefHeight="107.0" prefWidth="1496.0" spacing="50.0">
                     <children>
                            <ImageView fx:id="backButton" fitHeight="58.0" fitWidth="89.0" onMouseClicked="#switchToMainScreen" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../../Assets/left-arrow.png" />
                                </image>
                           <HBox.margin>
                              <Insets left="-100.0" />
                           </HBox.margin>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                            </ImageView>
                            <Label text="Select question filters:">
                                <font>
                                    <Font name="Calibri" size="24.0" />
                                </font>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                            </Label>
                            <MenuButton fx:id="subjectsDropdown" mnemonicParsing="false" styleClass="primary" text="Subjects" />
                            <MenuButton fx:id="coursesDropdown" disable="true" mnemonicParsing="false" styleClass="primary" text="Courses" />
                     </children>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="86.0" prefWidth="1258.0" spacing="50.0">
                     <children>
                            <Button fx:id="questionDetailsButton" mnemonicParsing="false" onAction="#switchToQuestionEditScreen" prefHeight="77.0" prefWidth="192.0" styleClass="info" text="Show Details" />
                        <Button fx:id="addButton" mnemonicParsing="false" onAction="#switchToAddQuestionScreen" prefHeight="77.0" prefWidth="192.0" styleClass="info" text="New Question" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" />
                     </padding>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
              <TilePane alignment="CENTER" prefHeight="524.0" prefWidth="811.0">
                  <children>
                      <ListView fx:id="questionsList" editable="true" onMouseClicked="#handleMouseEvent" prefHeight="442.0" prefWidth="740.0" stylesheets="@bootstrap3.css">
                     <TilePane.margin>
                        <Insets bottom="30.0" />
                     </TilePane.margin>
                  </ListView>
                  </children>
              </TilePane>
         </children>
         <padding>
            <Insets bottom="50.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
