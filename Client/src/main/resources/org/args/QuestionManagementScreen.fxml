<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="710.0" prefWidth="970.0" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="org.args.GUI.QuestionManagementScreenController">
    <top>
        <AnchorPane prefHeight="93.0" prefWidth="970.0" BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="33.0" layoutY="33.0" text="Select question filters:">
                    <font>
                        <Font name="Calibri" size="24.0"/>
                    </font>
                </Label>
                <MenuButton fx:id="coursesDropdown" layoutX="285.0" layoutY="35.0" mnemonicParsing="false"
                            prefHeight="25.0" prefWidth="115.0" text="Courses"/>
                <Button fx:id="showQuestionList" layoutX="617.0" layoutY="34.0" mnemonicParsing="false"
                        onAction="#getQuestionsList" prefHeight="25.0" prefWidth="207.0" text="Show Questions List"/>
            </children>
        </AnchorPane>
    </top>
    <center>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <ListView fx:id="questionsList" editable="true" layoutX="-1.0" layoutY="1.0" prefHeight="611.0"
                          prefWidth="704.0"/>
            </children>
        </AnchorPane>
    </center>
    <right>
        <AnchorPane prefHeight="617.0" prefWidth="267.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="questionDetailsButton" layoutX="71.0" layoutY="257.0" mnemonicParsing="false"
                        onAction="#switchToQuestionEditScreen" prefHeight="104.0" prefWidth="126.0" text="Details"/>
            </children>
        </AnchorPane>
    </right>
</BorderPane>
