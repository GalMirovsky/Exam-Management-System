<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.args.GUI.ViewDeanTimeExtensionController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
     <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="20.0">
         <padding>
             <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Time Extension Requests">
             <font>
                 <Font size="22.0" />
             </font>
         </Label>
         <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="20.0">
             <VBox.margin>
                 <Insets />
             </VBox.margin>
             <padding>
                 <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
             </padding>
             <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="20.0">
                 <padding>
                     <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                 </padding>
                 <Label alignment="CENTER" prefHeight="17.0" prefWidth="152.0" text="Requests by teachers:" textAlignment="CENTER">
                     <VBox.margin>
                         <Insets />
                     </VBox.margin>
                     <opaqueInsets>
                         <Insets />
                     </opaqueInsets>
                 </Label>
                 <ListView fx:id="requestListView" onMouseClicked="#handleMouseEvent" prefHeight="294.0" prefWidth="287.0" />
             </VBox>
             <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="60.0">
                 <padding>
                     <Insets bottom="20.0" left="20.0" right="20.0" top="80.0" />
                 </padding>
                 <Button fx:id="acceptButton" disable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#acceptExtension" styleClass="primary" text="accept">
                     <padding>
                         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                 </Button>
                 <Button fx:id="rejectButton" disable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#rejectExtension" styleClass="danger" text="reject">
                     <padding>
                         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                 </Button>
             </VBox>
         </HBox>
         <Button mnemonicParsing="false" onAction="#switchToMainScreen" prefHeight="32.0" prefWidth="75.0" styleClass="danger" text="Back" />
     </VBox>
</ScrollPane>
